<!-- This is only for the Home page -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>

    <!--  Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <!--  Your custom CSS -->
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>

    <!-- Main Content -->
     <div class="container">
        <!-- Header -->
        <header>
            <h1>🌤️ Weather With You</h1>
        </header>

        <!-- Search Section -->
        <div class="search-section">
            <form class="search-form" id="weatherForm">
                <input 
                    type="text" 
                    id="cityInput"
                    placeholder="Enter city name" 
                    list="cities"
                    required
                >
                <button type="submit">Search</button>
            </form>
        </div>

        <!-- Weather Display -->
        <div class="weather-card" id="weatherCard">
            <div class="city-name">
                <h2 id="cityName">------</h2>
            </div>

            <div class="main-info">
                <div class="temperature">
                    <span id="temp">--</span>°C
                </div>
                <div class="weather-desc">
                    <div id="weatherMain">----</div>
                    <div id="weatherDescription">----- -----</div>
                </div>
            </div>

            <div class="feels-like">
                Feels like <span id="feelsLike">--</span>°C
            </div>

            <div class="details">
                <div class="detail-item">
                    <span class="label">💧 Humidity:</span>
                    <span id="humidity">--</span>%
                </div>
                <div class="detail-item">
                    <span class="label">☁️ Clouds:</span>
                    <span id="clouds">--</span>%
                </div>
                <div class="detail-item">
                    <span class="label">💨 Wind speed:</span>
                    <span id="windSpeed">--</span>kmph
                </div>
                <div class="detail-item">
                    <span class="label">👀 Visibility:</span>
                    <span id="visibility">--</span>km
                </div>
            </div>
        </div>

        <!-- Default message -->
        <div class="no-data" id="noData">
            <p>Enter a city name to get weather information</p>
        </div>
    </div>

    <script src="/js/home.js"></script>


    <!--  Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>